<snippet>
	<content><![CDATA[
# Create dir if
# not already created
if [[ ! -d ${1:dirPath} ]]; then
	mkdir ${1:dirPath}
fi
]]></content>
	<!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
	<tabTrigger>ifmkdir</tabTrigger>
	<!-- Optional: Set a scope to limit where the snippet will trigger -->
	<scope>source.shell</scope>
	<description>Create dir if not already created</description>
</snippet>
